---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Jin Hong Kuan', description = 'Field notes on how decisions become systems' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,500;1,400&family=Inter:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <nav class="navigation">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>Home</a>
      <a href="/about" class={currentPath.startsWith('/about') ? 'active' : ''}>About</a>
      <a href="/inquiry" class={currentPath.startsWith('/inquiry') ? 'active' : ''}>Inquiry</a>
      <a href="/field-notes" class={currentPath.startsWith('/field-notes') ? 'active' : ''}>Field Notes</a>
      <a href="/threads" class={currentPath.startsWith('/threads') ? 'active' : ''}>Threads</a>
      <a href="/practice" class={currentPath.startsWith('/practice') ? 'active' : ''}>Practice</a>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer>
      <hr />
      <p><a href="/colophon">Colophon</a> Â· <a href="/about#contact">Contact</a></p>
    </footer>
  </div>
</body>
</html>

<style>
  /* Base typography and colors */
  :root {
    --color-bg: #FAF9F5;
    --color-text: #1A1A1A;
    --color-accent: #7A7A52;
    --color-border: #E7E6E2;
    --color-muted: #F5F4F0;
    --font-serif: 'EB Garamond', Georgia, serif;
    --font-sans: 'Inter', -apple-system, sans-serif;
    --shadow-sm: 0 1px 2px rgba(0,0,0,0.04);
    --shadow-md: 0 4px 6px rgba(0,0,0,0.05);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-size: 18px;
    line-height: 1.6;
  }

  body {
    font-family: var(--font-serif);
    color: var(--color-text);
    background-color: var(--color-bg);
    padding: 2rem 1rem;
  }

  /* Container */
  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Navigation */
  .navigation {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 5rem;
    padding: 1.5rem 0;
    border-bottom: 2px solid var(--color-border);
    font-family: var(--font-sans);
    font-size: 0.9rem;
  }

  .navigation a {
    color: var(--color-text);
    text-decoration: none;
    margin-right: 2.5rem;
    opacity: 0.6;
    transition: all 0.2s ease;
    position: relative;
  }

  .navigation a:last-child {
    margin-right: 0;
  }

  .navigation a:hover {
    opacity: 1;
  }

  .navigation a.active {
    opacity: 1;
    font-weight: 500;
  }

  .navigation a.active::after {
    content: '';
    position: absolute;
    bottom: -1.6rem;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--color-accent);
  }

  /* Main content */
  main {
    min-height: calc(100vh - 12rem);
  }

  /* Global styles */
  h1, h2, h3 {
    font-family: var(--font-serif);
    font-weight: 400;
    line-height: 1.3;
    margin: 2rem 0 1rem;
  }

  h1 {
    font-size: 2.2rem;
    margin-bottom: 2rem;
  }

  h2 {
    font-size: 1.8rem;
    margin-top: 3rem;
  }

  h3 {
    font-size: 1.4rem;
  }

  p {
    margin-bottom: 1.5rem;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  a:hover {
    border-bottom-color: var(--color-accent);
  }

  code {
    font-family: 'Menlo', 'Monaco', monospace;
    font-size: 0.9em;
    background: rgba(0,0,0,0.04);
    padding: 0.1em 0.3em;
    border-radius: 3px;
  }

  blockquote {
    margin: 1.5rem 0;
    padding-left: 1.5rem;
    border-left: 3px solid var(--color-border);
    font-style: italic;
  }

  hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 3rem 0;
  }

  ul, ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  li {
    margin-bottom: 0.5rem;
  }

  /* Footer */
  footer {
    margin-top: 4rem;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    text-align: center;
    opacity: 0.7;
  }

  footer hr {
    margin: 2rem 0 1rem;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .navigation a {
      margin-right: 1rem;
      font-size: 0.85rem;
    }
  }
</style>