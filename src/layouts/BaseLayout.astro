---
import BaseLayoutSvelte from '../components/layout/BaseLayout.svelte';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Jin Kuan', description = '' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <BaseLayoutSvelte 
    client:load
    title={title}
    description={description}
    currentPath={currentPath}
  >
    <slot />
  </BaseLayoutSvelte>
</body>
</html>