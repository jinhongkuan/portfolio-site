---
import NoteCardSvelte from './NoteCard.svelte';

export interface Props {
  title: string;
  url: string;
  preview: string;
  type?: 'fieldwork' | 'armchair';
}

const { title, url, preview, type } = Astro.props;
---

<NoteCardSvelte 
  client:visible
  title={title}
  href={url}
  description={preview}
  type={type}
/>