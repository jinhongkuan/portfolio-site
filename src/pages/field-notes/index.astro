---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all field notes
const allNotes = await Astro.glob('./*.md');
const fieldNotes = allNotes
  .filter(note => !note.file.includes('index.md'))
  .sort((a, b) => {
    // Extract date from content or frontmatter
    const dateA = a.frontmatter?.date || '2024-01-01';
    const dateB = b.frontmatter?.date || '2024-01-01';
    return dateB.localeCompare(dateA);
  });

// Separate fieldwork and armchair notes
const fieldworkNotes = fieldNotes.filter(note => {
  const content = note.compiledContent ? note.compiledContent() : '';
  return content.includes('ðŸ”¬');
});

const armchairNotes = fieldNotes.filter(note => {
  const content = note.compiledContent ? note.compiledContent() : '';
  return content.includes('ðŸª‘');
});
---

<BaseLayout title="Field Notes - Jin Hong Kuan">
  <div class="field-notes-header">
    <h1>Field Notes</h1>
    <p class="header-description">
      Raw observations from the intersection where business decisions become engineering constraints. 
      Each note captures a moment where reality refused to match the model.
    </p>
  </div>

  <div class="notes-container">
    <section class="notes-section">
      <div class="section-header">
        <h2>From the Field ðŸ”¬</h2>
        <span class="section-count">{fieldworkNotes.length} notes</span>
      </div>
      <p class="section-description">
        Empirical observations from startup consulting and technical fieldwork. 
        Where theory meets the messy reality of actual systems.
      </p>
      
      <div class="notes-grid">
        {fieldworkNotes.map((note) => {
          const title = note.frontmatter?.title || note.url.split('/').pop().replace(/-/g, ' ');
          const url = note.url;
          
          // Extract preview from content
          const content = note.compiledContent ? note.compiledContent() : '';
          const cleanContent = content.replace(/<[^>]*>?/gm, '');
          const lines = cleanContent.split('\n').filter(line => line.trim());
          const preview = lines.find(line => 
            line.length > 50 && 
            !line.includes('ðŸ”¬') && 
            !line.includes('Tags:') &&
            !line.includes('*')
          ) || '';
          
          return (
            <a href={url} class="note-card">
              <h3>{title}</h3>
              <p class="note-preview">{preview.substring(0, 150)}...</p>
              <span class="note-link">Read more â†’</span>
            </a>
          );
        })}
      </div>
    </section>

    <section class="notes-section">
      <div class="section-header">
        <h2>From the Armchair ðŸª‘</h2>
        <span class="section-count">{armchairNotes.length} notes</span>
      </div>
      <p class="section-description">
        Theoretical reflections connecting fieldwork to broader patterns. 
        Where philosophy meets practice.
      </p>
      
      <div class="notes-grid">
        {armchairNotes.map((note) => {
          const title = note.frontmatter?.title || note.url.split('/').pop().replace(/-/g, ' ');
          const url = note.url;
          
          // Extract preview from content
          const content = note.compiledContent ? note.compiledContent() : '';
          const cleanContent = content.replace(/<[^>]*>?/gm, '');
          const lines = cleanContent.split('\n').filter(line => line.trim());
          const preview = lines.find(line => 
            line.length > 50 && 
            !line.includes('ðŸª‘') && 
            !line.includes('Tags:') &&
            !line.includes('*')
          ) || '';
          
          return (
            <a href={url} class="note-card">
              <h3>{title}</h3>
              <p class="note-preview">{preview.substring(0, 150)}...</p>
              <span class="note-link">Read more â†’</span>
            </a>
          );
        })}
      </div>
    </section>
  </div>

  <div class="notes-footer">
    <p>
      <em>Each note stands alone but gains meaning through connections. 
      Follow the links. See what emerges.</em>
    </p>
  </div>
</BaseLayout>

<style>
  .field-notes-header {
    margin-bottom: 4rem;
    text-align: center;
  }

  .field-notes-header h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .header-description {
    font-size: 1.2rem;
    line-height: 1.7;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0.85;
  }

  .notes-container {
    margin-bottom: 4rem;
  }

  .notes-section {
    margin-bottom: 5rem;
  }

  .section-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 1rem;
    border-bottom: 2px solid var(--color-border);
    padding-bottom: 0.5rem;
  }

  .section-header h2 {
    margin: 0;
    font-size: 1.8rem;
  }

  .section-count {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    opacity: 0.6;
  }

  .section-description {
    font-style: italic;
    opacity: 0.8;
    margin-bottom: 2rem;
  }

  .notes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .note-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: #F5F4F0;
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .note-card:hover {
    background: #EFEDE8;
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .note-card h3 {
    margin: 0 0 1rem 0;
    font-size: 1.3rem;
    font-weight: 500;
    line-height: 1.3;
  }

  .note-preview {
    flex: 1;
    font-size: 0.95rem;
    line-height: 1.6;
    opacity: 0.75;
    margin-bottom: 1rem;
  }

  .note-link {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .notes-footer {
    text-align: center;
    padding-top: 3rem;
    border-top: 1px solid var(--color-border);
  }

  .notes-footer p {
    font-size: 1.1rem;
    opacity: 0.7;
  }

  @media (max-width: 768px) {
    .field-notes-header h1 {
      font-size: 2.2rem;
    }

    .notes-grid {
      grid-template-columns: 1fr;
    }
  }
</style>