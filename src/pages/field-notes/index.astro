---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageTransition from '../../components/layout/PageTransition.svelte';

// Get all field notes
const allNotes = await Astro.glob('./*.md');
const filteredNotes = allNotes.filter(note => note.file && !note.file.includes('index.md'));

// Separate pinned and regular notes
const pinnedNotes = filteredNotes.filter(note => note.frontmatter?.pinned);

// Helper to get compiled content safely as string
const getContent = (note: any): string => {
  try {
    const raw = typeof note.compiledContent === 'function' ? note.compiledContent() : '';
    return typeof raw === 'string' ? raw : String(raw || '');
  } catch {
    return '';
  }
};

// Helper to extract date from content if not in frontmatter
const getDate = (note: any) => {
  if (note.frontmatter?.date) return note.frontmatter.date;
  const content = getContent(note);
  const dateMatch = content.match(/\*(\d{4}-\d{2}-\d{2})\*/);
  return dateMatch ? dateMatch[1] : '2024-01-01';
};

// Helper to get title
const getTitle = (note: any) => {
  if (note.frontmatter?.title) return note.frontmatter.title;
  const content = getContent(note);
  const titleMatch = content.match(/<h1[^>]*>([^<]+)<\/h1>/);
  if (titleMatch) return titleMatch[1];
  return note.url ? note.url.split('/').pop()?.replace(/-/g, ' ') : 'Untitled';
};

// Helper to determine category
const getCategory = (note: any) => {
  const content = getContent(note);
  return content.includes('ðŸ”¬') ? 'field' : 'armchair';
};

// Helper to extract tags
const getTags = (note: any): string[] => {
  const content = getContent(note);
  const tagMatches = content.match(/`([^`]+)`/g);
  if (!tagMatches) return [];
  return tagMatches
    .map(t => t.replace(/`/g, ''))
    .filter(t => !['fieldwork', 'armchair'].includes(t) && !t.includes('Tags'));
};

// Process and categorize notes
const regularNotes = filteredNotes
  .filter(note => !note.frontmatter?.pinned)
  .map(note => ({
    title: getTitle(note),
    url: note.url || '',
    date: getDate(note),
    category: getCategory(note),
    tags: getTags(note)
  }))
  .sort((a, b) => b.date.localeCompare(a.date));

const fieldNotes = regularNotes.filter(n => n.category === 'field');
const armchairNotes = regularNotes.filter(n => n.category === 'armchair');

// Format date for display
const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
};
---

<BaseLayout title="Field Notes - Jin Kuan">
  <PageTransition client:load>
    <h1>Field Notes</h1>

    {pinnedNotes.length > 0 && (
      <div class="pinned-section">
        {pinnedNotes.map((note) => {
          const title = note.frontmatter?.title || 'Untitled';
          const url = note.url || '';
          return (
            <a href={url} class="pinned-note">
              <span class="pinned-label">Professional Thesis</span>
              <span class="pinned-title">{title}</span>
              <span class="pinned-arrow">â†’</span>
            </a>
          );
        })}
      </div>
    )}

    {fieldNotes.length > 0 && (
      <section class="category-section">
        <h2>Field</h2>
        {fieldNotes.map((note) => (
          <a href={note.url} class="toc-entry">
            <span class="toc-title">{note.title}</span>
            <span class="toc-dots"></span>
            <span class="toc-date">{formatDate(note.date)}</span>
          </a>
        ))}
      </section>
    )}

    {armchairNotes.length > 0 && (
      <section class="category-section">
        <h2>Armchair Speculations</h2>
        {armchairNotes.map((note) => (
          <a href={note.url} class="toc-entry">
            <span class="toc-title">{note.title}</span>
            <span class="toc-dots"></span>
            <span class="toc-date">{formatDate(note.date)}</span>
          </a>
        ))}
      </section>
    )}
  </PageTransition>
</BaseLayout>

<style>
  h1 {
    margin-bottom: 2rem;
  }

  .pinned-section {
    margin-bottom: 3rem;
  }

  .pinned-note {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-muted);
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .pinned-note:hover {
    border-color: var(--color-border);
  }

  .pinned-label {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-accent);
    background: var(--color-bg);
    padding: 0.25rem 0.5rem;
    border-radius: 3px;
  }

  .pinned-title {
    flex: 1;
    font-family: var(--font-serif);
    font-size: 1.2rem;
    font-weight: 500;
  }

  .pinned-arrow {
    font-family: var(--font-sans);
    color: var(--color-accent);
  }

  .category-section {
    margin-bottom: 2.5rem;
  }

  .category-section h2 {
    font-family: var(--font-serif);
    font-size: 1rem;
    font-weight: 400;
    font-style: italic;
    margin-bottom: 1rem;
  }

  .toc-entry {
    display: flex;
    align-items: baseline;
    text-decoration: none;
    color: inherit;
    margin-bottom: 0.5rem;
  }

  .toc-entry:hover .toc-title {
    color: var(--color-accent);
  }

  .toc-title {
    font-family: var(--font-serif);
    white-space: nowrap;
  }

  .toc-dots {
    flex: 1;
    border-bottom: 1px dotted var(--color-border);
    margin: 0 0.5rem;
    min-width: 2rem;
  }

  .toc-date {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    white-space: nowrap;
    opacity: 0.7;
  }
</style>
