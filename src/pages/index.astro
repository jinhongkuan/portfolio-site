---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <div class="homepage">
    <h1 class="site-title">JIN HONG KUAN</h1>
    
    <blockquote class="jefferson-quote">
      <p>"I hope our wisdom will grow with our power, and teach us that the less we use our power, the greater it will be."</p>
      <cite>— Thomas Jefferson</cite>
    </blockquote>
    
    <div class="central-question">
      <a href="/portfolio-site/about" class="question-link">
        Does technology still create freer societies?
      </a>
    </div>
    
    <nav class="home-nav">
      <a href="/portfolio-site/field-notes">Field Notes</a>
      <span class="separator">·</span>
      <a href="/portfolio-site/threads">Threads</a>
      <span class="separator">·</span>
      <a href="/portfolio-site/inquiry">Current Reading</a>
    </nav>
  </div>
</BaseLayout>

<style>
  .homepage {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 12rem);
    text-align: center;
    max-width: 720px;
    margin: 0 auto;
  }

  .site-title {
    font-size: 3.5rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    margin-bottom: 4rem;
    line-height: 1;
  }

  .jefferson-quote {
    margin: 0 0 4rem 0;
    font-size: 1.3rem;
    line-height: 1.8;
    max-width: 600px;
  }

  .jefferson-quote p {
    margin-bottom: 1rem;
    font-style: italic;
  }

  .jefferson-quote cite {
    font-style: normal;
    font-family: var(--font-sans);
    font-size: 0.9rem;
    opacity: 0.7;
  }

  .central-question {
    margin-bottom: 4rem;
  }

  .question-link {
    font-size: 2rem;
    font-style: italic;
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .question-link:hover {
    border-bottom-color: var(--color-accent);
  }

  .home-nav {
    font-family: var(--font-sans);
    font-size: 1rem;
  }

  .home-nav a {
    color: var(--color-text);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    margin: 0 1rem;
  }

  .home-nav a:hover {
    opacity: 1;
  }

  .separator {
    opacity: 0.3;
  }

  @media (max-width: 768px) {
    .site-title {
      font-size: 2.5rem;
    }

    .question-link {
      font-size: 1.5rem;
    }

    .jefferson-quote {
      font-size: 1.1rem;
    }
  }
</style>