---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageTransition from "../components/layout/PageTransition.svelte";
---

<BaseLayout>
  <PageTransition client:load>
    <div class="homepage">
      <h1 class="site-title">JIN KUAN</h1>

      <div class="links">
        <a
          href="/portfolio-site/Resume_Jin_Kuan.pdf"
          target="_blank"
          rel="noopener noreferrer">Resume</a
        >
      </div>

      <div class="sections">
        <section class="section-item">
          <h2><a href="/portfolio-site/practice">Practice →</a></h2>
          <p>Hands-on technical partnership for seed-stage startups.</p>
        </section>

        <section class="section-item">
          <h2><a href="/portfolio-site/projects">Projects →</a></h2>
          <p>Open-source tools for product-engineering alignment.</p>
        </section>

        <section class="section-item">
          <h2><a href="/portfolio-site/field-notes">Field Notes →</a></h2>
          <p>Reflections on technology, markets, and software development.</p>
        </section>
      </div>
    </div>
  </PageTransition>
</BaseLayout>

<style>
  .homepage {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 12rem);
    text-align: center;
    max-width: 720px;
    margin: 0 auto;
  }

  .site-title {
    font-size: 2.22rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    margin-bottom: 1.5rem;
    line-height: 1;
  }

  .links {
    font-family: var(--font-sans);
    font-size: 0.95rem;
    margin-bottom: 2rem;
  }

  .links a {
    color: var(--color-text);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    margin: 0 0.5rem;
  }

  .links a:hover {
    opacity: 1;
    text-decoration: underline;
  }

  .sections {
    margin: 0 0 3rem 0;
    text-align: center;
    width: 100%;
    max-width: 680px;
  }

  .section-item {
    margin-bottom: 2.5rem;
  }

  .section-item h2 {
    font-family: var(--font-sans);
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-item h2 a {
    color: inherit;
    text-decoration: none;
    border-bottom: none;
  }

  .section-item h2 a:hover {
    color: var(--color-accent);
    border-bottom: none;
  }

  .section-item p {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 0.75rem 0;
  }

  .section-item p:last-child {
    margin-bottom: 0;
  }

  .section-item .cta {
    margin-top: 1rem;
  }

  .section-item .cta a {
    font-family: var(--font-sans);
    font-weight: 500;
    color: var(--color-accent);
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease;
  }

  .section-item .cta a:hover {
    transform: translateX(3px);
  }

  .home-nav {
    font-family: var(--font-sans);
    font-size: 1rem;
    margin-top: 3rem;
  }

  .home-nav a {
    color: var(--color-text);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    margin: 0 1rem;
  }

  .home-nav a:hover {
    opacity: 1;
  }

  .separator {
    opacity: 0.3;
  }

  @media (max-width: 768px) {
    .site-title {
      font-size: 2rem;
    }
  }
</style>
